// --- DATABASE CONNECTION ---
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- CLIENT GENERATOR ---
generator client {
  provider = "prisma-client-js"
}

// --- MODELS (YOUR DATABASE TABLES) ---
model Workflow {
  id          String   @id @default(cuid())
  name        String
  description String?
  nodesJson   Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
